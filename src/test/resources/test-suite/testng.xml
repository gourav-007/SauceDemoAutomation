<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Test Suite" verbose="1" parallel="none" thread-count="1">
    
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <test name="Login Tests" preserve-order="true">
        <classes>
            <class name="com.saucedemo.tests.LoginTests"/>
        </classes>
    </test>
    
    <test name="Logout Tests" preserve-order="true">
        <classes>
            <class name="com.saucedemo.tests.LogoutTests"/>
        </classes>
    </test>
    
    <test name="Cart Tests" preserve-order="true">
        <classes>
            <class name="com.saucedemo.tests.CartTests"/>
        </classes>
    </test>
    
    <test name="Checkout Tests" preserve-order="true">
        <classes>
            <class name="com.saucedemo.tests.CheckoutTests"/>
        </classes>
    </test>
    
</suite>
